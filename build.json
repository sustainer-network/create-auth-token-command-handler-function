{
  "substitutions": {
    "_TITLE": "Create Auth Token",
    "_ACTION": "create",
    "_DOMAIN": "auth-token",
    "_SERVICE": "core",
    "_NETWORK": "sustainer.network",
    "_GCP_PROJECT": "sustainernetwork",
    "_GCP_REGION": "us-central1",
    "_GCP_DNS_ZONE": "network",
    "_ESP_OPTIONS": "--cors_preset=basic,--cors_allow_methods=POST,--cors_allow_headers=Authorization Content-Type,--cors_allow_credentials",
    "_MEMORY": "128Mi"
  },
  "steps": [
    {
      "name": "gcr.io/cloud-builders/docker",
      "entrypoint": "bash",
      "args": [
        "-c",
        "docker build -t us.gcr.io/staging-${_GCP_PROJECT}/${_SERVICE}.${_DOMAIN}.${_ACTION} ."
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "entrypoint": "bash",
      "args": [
        "-c",
        "docker push us.gcr.io/staging-${_GCP_PROJECT}/${_SERVICE}.${_DOMAIN}.${_ACTION}"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta run deploy staging-${_SERVICE}-${_DOMAIN}-${_ACTION}-command --image=us.gcr.io/staging-${_GCP_PROJECT}/${_SERVICE}.${_DOMAIN}.${_ACTION} --platform=managed --memory=${_MEMORY} --allow-unauthenticated --project=staging-${_GCP_PROJECT} --region=${_GCP_REGION} --set-env-vars=NODE_ENV=staging,NETWORK=${_NETWORK},SERVICE=${_SERVICE},ACTION=${_ACTION},DOMAIN=${_DOMAIN}"
      ]
    }
  ]
}
