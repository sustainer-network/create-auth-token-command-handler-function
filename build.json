{
  "substitutions": {
    "_TITLE": "Create Auth Token",
    "_ACTION": "create",
    "_DOMAIN": "auth-token",
    "_SERVICE": "core",
    "_NETWORK": "sustainer.network",
    "_GCP_PROJECT": "sustainernetwork",
    "_GCP_REGION": "us-central1",
    "_GCP_DNS_ZONE": "network",
    "_ESP_OPTIONS": "--cors_preset=basic,--cors_allow_methods=POST,--cors_allow_headers=Authorization Content-Type,--cors_allow_credentials",
    "_MEMORY": "128Mi"
  },
  "steps": [
    {
      "name": "gcr.io/cloud-builders/docker",
      "entrypoint": "bash",
      "args": [
        "-c",
        "docker build -t us.gcr.io/staging-${_GCP_PROJECT}/${_SERVICE}.${_DOMAIN}.${_ACTION} ."
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "entrypoint": "bash",
      "args": [
        "-c",
        "docker push us.gcr.io/staging-${_GCP_PROJECT}/${_SERVICE}.${_DOMAIN}.${_ACTION}"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta run deploy ${_SERVICE}-${_DOMAIN}-${_ACTION}-command --image=us.gcr.io/staging-${_GCP_PROJECT}/${_SERVICE}.${_DOMAIN}.${_ACTION} --platform=managed --memory=${_MEMORY} --allow-unauthenticated --project=staging-${_GCP_PROJECT} --region=${_GCP_REGION} --set-env-vars=NODE_ENV=staging,NETWORK=${_NETWORK},SERVICE=${_SERVICE},ACTION=${_ACTION},DOMAIN=${_DOMAIN}"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta dns record-sets transaction start --zone=${_GCP_DNS_ZONE} --project=staging-${_GCP_PROJECT}"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta dns record-sets transaction add ghs.googlehosted.com. --name=${_ACTION}.${_DOMAIN}.${_SERVICE}.staging.${_NETWORK} --zone=${_GCP_DNS_ZONE} --type=CNAME --ttl=300 --project=${_GCP_PROJECT}"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta dns record-sets transaction execute --zone=${_GCP_DNS_ZONE} --project=${_GCP_PROJECT} || exit 0"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta dns record-sets transaction abort --zone=${_GCP_DNS_ZONE} --project=${_GCP_PROJECT} || exit 0"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta run domain-mappings create --platform=managed --service=${_SERVICE}-${_DOMAIN}-${_ACTION}-command --domain=${_ACTION}.${_DOMAIN}.${_SERVICE}.staging.${_NETWORK} --project=staging-${_GCP_PROJECT} --region=${_GCP_REGION} || exit 0"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "sed -e 's/#_NAME/${_SERVICE}-${_DOMAIN}-${_ACTION}-command/g; s/#_HOST/${_ACTION}.${_DOMAIN}.${_SERVICE}.staging.${_NETWORK}/g; s/#_GCP_PROJECT/staging-${_GCP_PROJECT}/g; s/#_GCP_REGION/${_GCP_REGION}/g; s/#_TITLE/${_TITLE}/g;' doc.json > doc.staging.json"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud endpoints services deploy /workspace/doc.staging.json --project=staging-${_GCP_PROJECT} || exit 0"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta run services update ${_SERVICE}-${_DOMAIN}-${_ACTION}-command --platform=managed --project=staging-${_GCP_PROJECT} --region=${_GCP_REGION} --set-env-vars=\"^|^ENDPOINTS_SERVICE_NAME=${_ACTION}.${_DOMAIN}.${_SERVICE}.staging.${_NETWORK}|ESP_ARGS=--rollout_strategy=managed,${_ESP_OPTIONS}\""
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud beta run add-iam-policy-binding staging-${_SERVICE}-${_DOMAIN}-${_ACTION}-command --member serviceAccount:925908726546-compute@developer.gserviceaccount.com --role roles/cloudfunctions.invoker"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gcloud pubsub topics create did-${_ACTION}.${_DOMAIN}.${_SERVICE}.staging --project=${_GCP_PROJECT} || exit 0"
      ]
    },
    {
      "name": "node:10.16.0",
      "entrypoint": "yarn",
      "args": ["install"]
    },
    {
      "name": "node:10.16.0",
      "entrypoint": "yarn",
      "args": ["test"]
    }
  ]
}
